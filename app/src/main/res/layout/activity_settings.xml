<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智谱AI设置"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API密钥："
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/zhipuApiKeyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入智谱AI API密钥"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gmail设置"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱地址："
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/gmailAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证方式："
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/authMethodRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/oauthRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OAuth认证"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/passwordRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="密码认证"/>

        </RadioGroup>

        <TextView
            android:id="@+id/passwordSettingsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码认证设置"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱密码："
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/gmailPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入邮箱密码"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/pop3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POP3服务器："
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/pop3ServerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="pop.gmail.com"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/pop3PortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POP3端口："
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/pop3PortEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="995"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/smtpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMTP服务器："
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/smtpServerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="smtp.gmail.com"
            android:inputType="text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/smtpPortLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMTP端口："
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/smtpPortEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="587"
            android:inputType="number"
            android:layout_marginBottom="32dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="取消"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存"
                android:backgroundTint="#4CAF50"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>