<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进度: 1/10"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/pronunciationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/ɪɡˈzæmpl/"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/playWordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放发音"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意思："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/meaningTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例子，实例"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="例句："
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/exampleSentenceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is an example sentence."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/playSentenceButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放例句"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/recordPronunciationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录音练习发音"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/previousButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上一个"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下一个"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/markLearnedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标记为已学习"
            android:backgroundTint="#4CAF50"/>

    </LinearLayout>

</ScrollView>